progress$: Observable<number> = of(0);

  // Simulate progress update
  startLoading() {
    this.progress$ = new Observable(observer => {
      let progress = 0;
      const interval = setInterval(() => {
        if (progress >= 100) {
          clearInterval(interval);
          observer.complete();
        } else {
          progress += 10;
          observer.next(progress);
        }
      }, 500);
    });
  }
}
