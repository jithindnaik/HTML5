import { handleError } from './path-to-handleError-file';

describe('handleError', () => {
  it('should return an error for string input', () => {
    const error = 'This is a string error';
    
    const result = handleError(error);
    
    expect(result).toEqual(new Error('This is a string error'));
  });

  it('should handle a client-side ErrorEvent', () => {
    const errorEvent = {
      error: {
        message: 'Client error message'
      }
    } as ErrorEvent;
    
    const result = handleError(errorEvent);
    
    expect(result).toEqual(new Error('An error occurred in client: Client error message'));
  });

  it('should handle a server-side error with status and message', () => {
    const backendError = {
      status: 500,
      message: 'Server error occurred'
    };
    
    const result = handleError(backendError);
    
    expect(result).toEqual(new Error('Error Code: 500\nMessage: Server error occurred'));
  });
});
